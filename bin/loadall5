#!/usr/bin/env bash

[ -f ~/perl5/perlbrew/etc/bashrc ] || exit 0

if [ x$TMPDIR = 'x' ]; then
	if [[ -d $HOME/tmp ]]; then
		export TMPDIR=$HOME/tmp
	else
		export TMPDIR=/tmp
	fi
fi

typeset -r LOCKFILE=${TMPDIR}/cpan-test.lck.pid
if test -s ${LOCKFILE} && kill -0 `cat ${LOCKFILE}`; then
	# echo "Already running"
	exit 0
fi

# make sure the lockfile is removed when we exit and then claim it
trap "rm -f ${LOCKFILE}; exit" INT TERM ALRM EXIT
echo $$ > ${LOCKFILE}

# Stage 5
. ~/perl5/perlbrew/etc/bashrc

rm -rf $HOME/.cpan/build/*&

export CPAN_SQLITE_NO_LOG_FILES=1
unset CC CFLAGS LDFLAGS

perlbrew switch-off

if [ $1x == x ]; then
	LIST=`perlbrew list | awk '{ print $1; }'`
else
	LIST=$*
fi

for i in $LIST
do
	if [ ! -d $PERLBREW_ROOT/perls/$i ]; then
		continue
	fi

	perlbrew use $i

	echo $i:

	if [ -r $HOME/.cpanreporter/perl-$i/config.ini ]; then
		export PERL_CPAN_REPORTER_DIR=$HOME/.cpanreporter/perl-$i
	else
		unset PERL_CPAN_REPORTER_DIR
	fi
	# perl -MCPAN -e 'CPAN::Shell->install("CPAN::Reporter", "File::HomeDir", "Unix::Processors", "LWP::Simple", "Proc::Govern", "Sys::CpuLoad", "Proc::Killfam", "Sys::LoadAvg", "BSD::Resource", "JSON", "CPAN::Recent::Uploads", "CPAN::Reporter::Smoker", "Bundle::CPAN::Reporter::Smoker::Tests", "Proc::PID::File", "autodie", "IPC::System::Simple", "File::Spec")'
	perl -MCPAN -e 'CPAN::Shell->install("CPAN::Reporter", "File::HomeDir", "Unix::Processors", "LWP::Simple", "Proc::Govern", "Sys::CpuLoad", "Proc::Killfam", "Sys::LoadAvg", "BSD::Resource", "JSON", "Proc::PID::File", "autodie", "IPC::System::Simple", "File::Spec", "Bundle::CPAN::Reporter::Smoker::Tests", "CPAN::Recent::Uploads")'
	# Try again in different order in case one of the above failed
	perl -MCPAN -e 'CPAN::Shell->install("IPC::System::Simple", "autodie", "Proc::Killfam", "LWP::Simple", "Unix::Processors", "Proc::PID::File", "Sys::CpuLoad", "BSD::Resource", "Proc::Govern")'

	# Create a baseline
	# PERL_CR_SMOKER_RUNONCE=1 perl -MCPAN::Reporter::Smoker -e start
done

rm -f ${LOCKFILE}
