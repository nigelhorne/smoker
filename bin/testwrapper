#!/usr/bin/env bash

# set -x
set -e
source $PERLBREW_ROOT/etc/bashrc

if [ -r $HOME/.cpanreporter/$PERLBREW_PERL/config.ini ]; then
	export PERL_CPAN_REPORTER_DIR=$HOME/.cpanreporter/$PERLBREW_PERL
fi

ulimit -d 393216
kernel=`uname`
if [[ "$kernel" != 'SunOS' ]]; then
        ulimit -m 393216
fi

exec perl -MCPAN -e "CPAN::Shell->test($*)"
