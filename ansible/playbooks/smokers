---
# Probably a few too many modules here as it may include stuff not needed
# for CPAN testing that I need to take out
- hosts: smokers
  remote_user: njh

  tasks:
  - name: upgrade all packages
    package:
      name: '*'
      state: latest
    when:
      # Raspberry Pi machines - save needless writes to the SD card
      # NetBSD has the architecture set to 'evbarm' instead of 'arm'
      ansible_facts['architecture'] is not regex('arm$')
    become: yes
  - name: install CPAN smoking stuff on all machines
    package:
      state: present
      name:
        - bash
        - curl
        - wget
        - autoconf
        - automake
        - git
        - rsync
        - patch
        - bzip2
        - flex
        - bison
        # - lynx
        # - perlbrew
        - sqlite
    become: yes
  - name: install CPAN smoking stuff on Linux machines
    package:
      state: present
      name:
        - tar
    when:
      ansible_facts['system'] == 'Linux'
    become: yes
  - name: install CPAN smoking stuff on RedHat
    package:
      state: present
      name:
        - cpan
        - expat-devel
        - gcc-c++
        - gtk2-devel
        - libaio-devel
        - libattr-devel
        - libcap-devel
        - ncurses-devel
        - openssl-devel
        - yum-utils
        # - deltarpm
        - perl-autodie
        - perl-CPAN
        - perl-Pod-Perldoc
        - perl-Proc-ProcessTable
        - perl-version
    when:
      ansible_facts['os_family'] == 'RedHat'
    become: yes
  - name: install CPAN smoking stuff on Debian
    package:
      state: present
      name:
        - gcc
        - libaio-dev
        - libattr1-dev
        - libcap-dev
        - libexpat1-dev
        - libgtk2.0-dev
        - libncurses-dev
        - libperl-version-perl
        - libproc-processtable-perl
        - libssl-dev
    when:
      ansible_facts['os_family'] == 'Debian'
    become: yes
  - name: install CPAN smoking stuff on BSD - packages
    package:
      state: present
      name:
        # You need to install Proc::Govern manually
        - p5-App-cpanminus
        - p5-BSD-Resource
        - p5-CPAN-Reporter
        - p5-File-HomeDir
        - p5-IPC-System-Simple
        - p5-Proc-PID-File
        - p5-Proc-ProcessTable
        - p5-Sys-CpuLoad
        - p5-Test-Reporter
        - p5-Unix-Processors
    when:
      ansible_facts['os_family'] is regex('BSD$')
    become: yes
  # Ansible's cpanm module doesn't support adding more than one module
  # - name: install CPAN smoking stuff on BSD - modules
    # cpanm:
      # notest: true
      # system_lib: true
      # name:
        # - Proc::Govern
        # - Proc::Killfam
    # when:
      # ansible_facts['os_family'] is regex('BSD$')
    # become: yes
  - name: install CPAN smoking stuff on BSD - modules
    command: cpanm -iqn Proc::Govern Proc::Killfam
    when:
      ansible_facts['os_family'] is regex('BSD$')
    become: yes
